<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.varun.assignment2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".addcontact_activity"
            android:parentActivityName=".addcontact_activity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden">
        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.varun.assignment2.MainActivity"/>
        </activity>

        <activity android:name=".contactdetails_activity"
            android:parentActivityName=".contactdetails_activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.varun.assignment2.MainActivity"/></activity>
    </application>

</manifest>